#!/bin/env groovy

pipeline {
  agent none

  environment {
    IMAGE = "liatrio/petclinic-tomcat"
  }

  stages {
    stage('Build') {
      agent any
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Package') {
      agent any
      steps {
        script {
          if ( env.BRANCH_NAME == 'master' ) {
            pom = readMavenPom file: 'pom.xml'
            TAG = pom.version
          } else {
            TAG = env.BRANCH_NAME
          }
          sh "docker build -t ${env.IMAGE}:${TAG} ."
        }
      }
    }
    stage('Deploy to Dev') {
      agent any
      steps {
        sh 'docker rm -f petclinic-tomcat-temp || true'
        sh "docker run -d -p 9966:8080 --name petclinic-tomcat-temp ${env.IMAGE}:${TAG}"
        //notify 'Dev deployed!'
      }
    }
    stage('Smoke-Test Dev') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
    stage('Deploy to QA') {
      agent any
      steps {
        //sh 'docker rm -f petclinic-tomcat-temp-qa || true'
        //sh "docker run -d -p 9966:8081 --name petclinic-tomcat-temp-qa ${env.IMAGE}:${TAG}"
        //emailext body: 'Letting you know that a QA deploy happened', subject: '[Jenkins] QA Deploy', to: 'me@aaronkraft.com'
        //notify 'QA deployed!'
      }
    }
    stage('Smoke-Test QA') {
      agent any
      steps {
        //Smoke-Test QA
        sh 'sleep 2'
      }
    }
    stage('Deploy to Prod') {
      agent any
      steps {
        input 'Deploy to Production?'
        //sh 'docker rm -f petclinic-tomcat-temp-prod || true'
        //sh "docker run -d -p 9966:8082 --name petclinic-tomcat-temp-prod ${env.IMAGE}:${TAG}"
        emailext body: 'Letting you know that a prod deploy happened', subject: '[Jenkins] Prod Deploy', to: 'me@aaronkraft.com'
        //notify 'Production deployed!'
      }
    }
  }
}
